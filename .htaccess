# Enable browser caching and compression for optimal performance
# Especially targeting 360 view media files

# Enable GZIP Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# Leverage Browser Caching
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images - cache for 1 year
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    
    # Video files - cache for 1 year (critical for 360 views)
    ExpiresByType video/mp4 "access plus 1 year"
    ExpiresByType video/webm "access plus 1 year"
    ExpiresByType video/ogg "access plus 1 year"
    
    # JavaScript and CSS - cache for 1 month
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    
    # HTML - cache for 1 hour (allows quick updates)
    ExpiresByType text/html "access plus 1 hour"
    
    # Fonts - cache for 1 year
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
</IfModule>

# Cache-Control headers
<IfModule mod_headers.c>
    # Cache videos aggressively (Critical for 360 views)
    <FilesMatch "\.(mp4|webm|ogg)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # Static Assets (Images) - Short cache
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg)$">
        Header set Cache-Control "public, max-age=3600, must-revalidate"
    </FilesMatch>

    # CODE FILES - DO NOT CACHE (Instant Live Updates)
    # This addresses the "remove all other from cache" requirement
    <FilesMatch "\.(html|htm|js|css|json)$">
        Header set Cache-Control "no-store, no-cache, must-revalidate, max-age=0"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
    
    # Enable CORS for 360 view resources
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type"
    
    # Remove ETags (ensure fresh fetch every time)
    Header unset ETag
</IfModule>

# Disable ETags (use Cache-Control instead)
FileETag None

# Enable KeepAlive for faster loading
<IfModule mod_headers.c>
    Header set Connection keep-alive
</IfModule>

# Preload critical resources
<IfModule mod_headers.c>
    # Preload 360 view domain
    Header set Link "<https://amandesignpartner.github.io>; rel=preconnect; crossorigin"
    Header append Link "<https://amandesignpartner.github.io/360views/>; rel=prefetch"
</IfModule>

# Enable HTTP/2 Server Push (if supported)
<IfModule mod_http2.c>
    Protocols h2 h2c http/1.1
</IfModule>
